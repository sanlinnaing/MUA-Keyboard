<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Special key pressed -->
    <item android:drawable="@drawable/blue_gray_pressed"
          android:state_pressed="true"
          android:state_single="true"/>
    <!-- Special key normal -->
    <item android:drawable="@drawable/blue_gray_special_key_bg"
          android:state_single="true"/>
    <!-- Normal key pressed -->
    <item android:drawable="@drawable/blue_gray_pressed"
          android:state_pressed="true"/>
    <!-- Normal key default -->
    <item android:drawable="@drawable/blue_gray_normal"/>
</selector>
